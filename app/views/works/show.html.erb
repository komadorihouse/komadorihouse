<div class="header">
  <%= render "shared/frist-header"%>
</div>

<div class="work-body">
  <% if @work.type_id == 3 %>
    <iframe width="900" height="506.25" src="https://www.youtube.com/embed/<%= @work.youtube %>" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
  <% else %>
    <%= image_tag ("http://drive.google.com/uc?export=view&id=#{@work.image}"),id:"work-image" %>
  <% end %>
  <div>
    creater: <%= @creater %>
  </div>
  <div>
    <%= @work.created_year %>年制作
  </div>
  <div>
    <%= @work.description %>
  </div>
</div>