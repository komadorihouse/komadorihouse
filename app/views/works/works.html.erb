<div class="header">
  <%= render "shared/frist-header"%>
</div>
<div class="body">
  <%# ここから左辺の目次欄 %>
  <div class="index">
    <div class="index-title">
      Works Index
    </div>
    <div class="index-contents">
      <ul class="contents-lists">
      <% @works.each do |work| %>
        <li class="contents-list">
          <span class="title-work"><%= work.title %></span><span class="date-work"><%= work.created_year %></span>
        </li>
      <% end %>
      </ul>
    </div>
  </div>
  <%# ここからメインコンテンツ表示域 %>
  <div class="works-contents">
    <div class="selected-works">
      All Works
    </div>
    <div class="contents-body">
      <% @works.each do |work| %>
      <div class="content">
        <div>
          <%= link_to image_tag("http://drive.google.com/uc?export=view&id=#{work.image}",class:"content-image") ,work_path(work.id)%>
        </div>
        <div class="content-title">
          <span class="title-work"><%= work.title %></span><span class="date-work"><%= work.created_year %></span>
        </div>
      </div>
      <% end %>

     

    <div>
  </div>
</div>