<div class="header">
  <%= render "shared/frist-header"%>
</div>
<div class="form-body">
  作品登録
  <%= form_with model: @work do |f| %>
  <div class="works-form">
    <%= f.label "作品名",for:"title" %><span class="emphasis">必須</span>
    <%= f.text_field :title, class:"works-text", id:"title" ,placeholder:"作品名" %>
    <%= f.label "Googleドライブ画像のリンク",for:"image" %>
    <%= f.text_area :image, class:"works-text", id:"image" ,placeholder:"Googleドライブの画像リンク" %>
    <%= f.label "作品の説明",for:"text" %>
    <%= f.text_area :text, class:"works-text", id:"text" ,placeholder:"作品の説明" %>
    <%= f.label "制作年",for:"created_year" %> 
    <%= f.text_field :created_year, class:"works-text", id:"year" ,placeholder:"2021", maxlength:"4" %>
    <%= f.label "作者名",for:"artist" %><span class="emphasis">必須</span>
    <%= f.text_field :artist, class:"works-text", id:"artist" ,placeholder:"作者" %>
    <%= f.label "ジャンル",for:"type_id" %><span class="emphasis">必須</span>
    <%= f.collection_select(:type_id, Type.all, :id, :name, {}, {class:"works-text", id:"type-id"}) %>  
    <%= f.submit "作品を登録" ,class:"works-text" %>
  </div>
  <% end %>
</div>