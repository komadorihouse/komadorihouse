<div id="contact-message">
  <%= render 'contacts/success'%>
</div>
<div id="contactbox">
  <%= render 'contacts/contact_form' %>
</div>
<header class='frist-header'>

  <div class="title-info">
    <%= link_to image_tag('komadorihouse_kana.png',id:"rogo-kana" ),'/' %>
    <%= link_to image_tag('old_rogo_Black_close.png',id:"rogo-image") ,'/' %>
    <div class="info">
      <div class="info-text">
          <%= @info %>
      </div>
    </div>
  </div>
  <div id="menu">
    <ul>
      <li class="menu-font"><%= link_to "Works",works_works_path %></li>
      <li class="menu-font"><%= link_to "Profile",profile_works_path %></li>
      <li class="menu-font" id="contact-btn">Contact</li>
      <li class="menu-font"><%= link_to "Link" ,link_works_path %></li>
      <li class="menu-font"><%= link_to "Kids' room" ,"#" %></li>
    </ul>
  </div>
    <% if current_page?(action: 'index') %>
      <%= image_tag("madawakaranai_kame.gif",class:"image-area") %>
    <% else %>
      <%= image_tag("http://drive.google.com/uc?export=view&id=#{@work}",class:"image-area") %>
